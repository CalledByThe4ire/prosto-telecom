extends ../blocks/layout-default/layout-default

//- page-header
include ../blocks/page-header/page-header
include ../blocks/cities/cities
include ../blocks/offers/offers
include ../blocks/user-interaction/user-interaction
include ../blocks/breadcrumbs/breadcrumbs

//- main-content
include ../blocks/main-content/main-content
include ../blocks/carousel/carousel
include ../blocks/plans/plans
include ../blocks/info/info

//- template
include ../blocks/template/template

block head
	- var pageTitle = 'Prosto Telecom';

block content
	+page-header
		+offers
	+main-content
		+carousel(getData('promo-slides'))(class='--promo', data-flickity='{"selectedAttraction": "0.2", "friction": "0.8"}')
		+plans(getData('plans-list'))
		+info

	+template

